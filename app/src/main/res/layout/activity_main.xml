<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewSkor"
        android:layout_width="132dp"
        android:layout_height="33dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Skor: 0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTime" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="132dp"
        android:layout_height="33dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Zaman: 15"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSkor">

        <ImageView
            android:id="@+id/imageViewKenny1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            app:srcCompat="@drawable/kenny"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageViewKenny13"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="3"
